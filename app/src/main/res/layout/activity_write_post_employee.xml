<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/zumthor"
    android:gravity="right"
    tools:context=".WritePostEmployeeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginRight="20dp"
        android:text=" إذا لم يكن تاريخ اليوم حدد التاريخ لطفا"
        android:gravity="center_vertical"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/navy_blue"
        android:id="@+id/datePost"/>
    <EditText
        android:id="@+id/PostEmployeeEdt"
        android:layout_width="360dp"
        android:layout_height="267dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundedstyle"
        android:fontFamily="sans-serif-condensed"
        android:gravity="right"
        android:textSize="25dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-condensed"
        android:onClick="btnClkPostByEm"
        android:text="نشر"
        android:textSize="22dp"
        android:visibility="visible"
        android:textColor="@color/zumthor"
        android:backgroundTint="@color/navy_blue"/>


</LinearLayout>