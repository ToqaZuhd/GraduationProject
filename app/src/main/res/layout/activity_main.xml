<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:background="@color/zumthor">
<RelativeLayout
    android:layout_width="390dp"
    android:layout_height="670dp"
    android:background="@color/white"
    android:gravity="center">

    <Button
        android:id="@+id/rentCarBtn"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:onClick="rentCarOnClickBtn"
         android:background="@drawable/car_rental"/>

    <TextView
        android:id="@+id/rentCarTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rentCarBtn"
        android:layout_marginLeft="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="استئجار سيارة"
        android:textAlignment="viewEnd"
        android:textSize="18dp"
        android:textColor="@color/navy_blue"/>

    <Button
        android:id="@+id/buyTicketBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/rentCarBtn"
        android:background="@drawable/ticket"

        android:onClick="buyTicketOnClickBtn"
        />
    <TextView
        android:id="@+id/buyTicketTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buyTicketBtn"
        android:layout_toRightOf="@id/rentCarTxt"
        android:layout_marginLeft="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="شراء تذكرة"
        android:textAlignment="viewEnd"
        android:textSize="18dp"
        android:textColor="@color/navy_blue"/>

    <Button
        android:id="@+id/neededInfoBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/rentCarTxt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/information"
        android:onClick="neededInfoOnClickBtn"
        />
    <TextView
        android:id="@+id/needInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/neededInfoBtn"
        android:layout_marginLeft="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="الوثائق المطلوبة"
        android:textAlignment="viewEnd"
        android:textSize="18dp"
        android:textColor="@color/navy_blue"/>
    <Button
        android:id="@+id/tripMapBtn"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:onClick="tripMapOnClickBtn"
        android:layout_toRightOf="@id/neededInfoBtn"
        android:layout_below="@id/buyTicketTxt"
        android:layout_margin="20dp"
        android:background="@drawable/save"/>
    <TextView
        android:id="@+id/tripMapTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripMapBtn"
        android:layout_toRightOf="@id/needInfoTxt"
        android:layout_marginLeft="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="خريطة الرحلة"
        android:textAlignment="viewEnd"
        android:textSize="18dp"
        android:textColor="@color/navy_blue"/>

</RelativeLayout>
</LinearLayout>