<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zumthor"
    tools:context=".ChangeEmail">


    <TextView
        android:id="@+id/NewEmail"
        android:layout_width="369dp"
        android:layout_height="47dp"
        android:layout_marginTop="55dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="right"
        android:text="الإيميل الجديد"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"
        android:textSize="27dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="369dp"
        android:layout_height="47dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="right"
        android:hint="الإيميل الجديد"
        android:inputType="textEmailAddress"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"
        android:textSize="27dp"
        android:textStyle="normal|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewEmail"/>

    <Button
        android:id="@+id/save_Button"
        android:layout_width="210dp"
        android:layout_height="57dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/blue"
        android:onClick="btnClkChange"
        android:text="حفظ التعديل"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>