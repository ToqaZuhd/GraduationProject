<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@color/zumthor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="287dp"
        android:layout_height="110dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

<TextView
    android:id="@+id/AddPerson"
    android:layout_width="200dp"
    android:layout_height="32dp"
    android:layout_marginTop="25dp"
    android:text="إنشاء حساب جديد"
    app:layout_constraintTop_toBottomOf="@+id/imageView9"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="center"
    android:fontFamily="sans-serif-condensed"
    android:textStyle="bold"
    android:textSize="25dp"/>



<EditText
    android:id="@+id/UserName"
    android:layout_width="234dp"
    android:layout_height="40dp"
    android:layout_marginTop="30dp"
    android:hint="اسم المستخدم"
    app:layout_constraintTop_toBottomOf="@+id/AddPerson"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:gravity="center"
    android:fontFamily="sans-serif-condensed"
    android:textStyle="normal"/>

<EditText
    android:id="@+id/IDNumber"
    android:layout_width="234dp"
    android:layout_height="40dp"
    android:ems="10"
    android:hint="رقم الهوية"
    android:layout_marginTop="15dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.502"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/UserName"
    android:textStyle="normal"
    android:fontFamily="sans-serif-condensed"
    android:gravity="center"
    />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="234dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="رقم الهاتف"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IDNumber"
                android:textStyle="normal"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="234dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="ادخل الإيميل"
                android:inputType="textEmailAddress"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneNumber"
                android:textStyle="normal"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/Password"
                android:layout_width="234dp"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="كلمة السر"
                android:inputType="textPassword"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress" />

<EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="234dp"
        android:layout_height="48dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:hint="تأكيد كلمة السر"
        android:inputType="textPassword"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Password" />




    <Button
    android:id="@+id/SignIn_Button"
    android:layout_width="234dp"
    android:layout_height="48dp"
    android:text="إنشاء حساب جديد"
    android:layout_marginTop="20dp"
    app:layout_constraintTop_toBottomOf="@+id/ConfirmPassword"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:onClick="btnClkRegister"
    android:backgroundTint="@color/blue"/>




<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:text="هل لديك حساب بالفعل؟"
    android:gravity="center"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/SignIn_Button"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:fontFamily="sans-serif-condensed"
    android:textStyle="bold"
    android:textSize="18dp"
    android:textColor="@color/black"
    android:clickable="true"

    />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="تسجيل دخول"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/blue"
                android:onClick="btnClkForLogin"
                android:clickable="true"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>